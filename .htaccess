# ==================================================================
# CROSS-ORIGIN RESOURCE SHARING (CORS)
# ==================================================================

<IfModule mod_headers.c>
    # Allow fonts from all origins
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

